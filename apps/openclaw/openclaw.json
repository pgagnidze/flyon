{
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "auth": { "mode": "token" },
    "trustedProxies": ["10.89.0.0/16"],
    "controlUi": { "dangerouslyDisableDeviceAuth": true }
  },
  "channels": {
    "slack": {
      "mode": "socket",
      "enabled": true,
      "groupPolicy": "open",
      "dm": { "policy": "open", "allowFrom": ["*"] }
    }
  },
  "plugins": {
    "entries": {
      "slack": { "enabled": true }
    }
  }
}
